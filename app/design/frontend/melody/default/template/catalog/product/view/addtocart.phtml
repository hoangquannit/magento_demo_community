<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
    <div class="group-cart clearfix">
        <?php if(!$_product->isGrouped()): ?>
        <p id="quantity_wanted_p">
            <label for="qty"><?php echo $this->__('Quantity:') ?></label>
            <input type="text" pattern="\d*" name="qty" id="qty" maxlength="12" value="<?php echo max($this->getProductDefaultQty() * 1, 1) ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
            <a href="#" data-field-qty="qty" class="btn btn-default button-minus product_quantity_down">
                <span><i class="icon-minus"></i></span>
            </a>
            <a href="#" data-field-qty="qty" class="btn btn-default button-plus product_quantity_up">
                <span><i class="icon-plus"></i></span>
            </a>
            <span class="clearfix"></span>
        </p>
        <?php endif; ?>
        <div class="box-cart-bottom">
            <p id="add_to_cart" class="buttons_bottom_block no-print">
                <button type="button" title="<?php echo $buttonTitle ?>" class="exclusive" onclick="productAddToCartForm.submit(this)"><span><span class="btn"><em><?php echo $buttonTitle ?></em></span></span></button>
                <?php echo $this->getChildHtml('', true, true) ?>
            </p>
        </div>
    </div>
<?php endif; ?>
